@page "/"

<div class="container px-0 m-0" >
	<div class="row p-0" style="height:92vh; width: 96vw">
		<div class="col-4" style="width: 320px">

			<!--APP LOGO-->
			<div class="mb-4 text-center">
				<img src="./splashicon.png" alt="Widerpaper Logo" style="height: 100px"/>
				<br />
				<h2>Widerpaper</h2>
				<h3 class="fw-light">Redux</h3>
			</div>

			<!--MIRROR ALGORITHM BLOCK-->
			<div class="alert alert-dark" role="alert">
				<!--BLOCK TITLE-->
				<h5 class="mb-4">
					Mirror algorithm
					<InfoTooltip Message="Mirror the left and right side of the image until it reaches the Ultrawide aspect ratio." />
				</h5>
				
				<!--BUTTONS-->
				<div class="d-flex gap-2">
					<button @onclick="OnClickSimpleMirrorBtn" type="button" class=@SetAlgorithmButtonsState("btn btn-sm w-100 btn-?", Algorithm.SimpleMirror) disabled="@_isLoading">
						Simple
						<InfoTooltip Message="Use this when you have an image with solid background color or repeating pattern." />
					</button>

					<button @onclick="OnClickBlurMirrorBtn" type="button" class=@SetAlgorithmButtonsState("btn btn-sm w-100 btn-?", Algorithm.BlurMirror) disabled="@_isLoading">
						Blurred
						<InfoTooltip Message="Use this when the Simple algorithm yields too many repeating pattern." />
					</button>
				</div>


				<!--BLUR OPTIONS-->
				@if (_algorithmChosen == Algorithm.BlurMirror)
				{
					<div class="mt-4 mb-2">
						<div class="row">
							<div class="col-8">
								<label for="blurStrength" class="form-label m-0">
									Blur Strength
									<InfoTooltip Message="Change the Gaussian Blur strength." />
								</label>
							</div>
							<div class="col">
								<div class="text-end">
									@(_blurStrength * 2)%
								</div>
							</div>
						</div>
						<input @oninput="OnInputBlurStrength" id="blurStrength" type="range" class="form-range" min="5" max="50" step="5" value="@_blurStrength" disabled="@_isLoading"/>
					</div>

					<div class="form-check form-switch">
						<input @onchange="OnChangeBlurTransition" checked="@true" class="form-check-input" type="checkbox" role="switch" id="flexSwitch" disabled="@_isLoading">
						<label class="form-check-label" for="flexSwitch">
							Apply blur transition?
							<InfoTooltip Message="Create a gradient transition from the blurred expanded area to the center of the image." />
						</label>
					</div>
				}
			</div>

			<!--UPSCALING BLOCK-->
			<div class="alert alert-dark" role="alert">
				<!--BLOCK TITLE-->
				<h5 class="mb-4">
					Upscaling
					<InfoTooltip Message="Decide whether to upscale the image or not." />
				</h5>

				<!--BUTTONS-->
				<div class="btn-group btn-group-sm d-flex" role="group" aria-label="Basic example">
					<button @onclick="OnClickUpscalingOriginalBtn" type="button" class=@SetUpscalingButtonsState("btn btn-? flex-fill", Upscaling.Original) disabled="@_isLoading">Original</button>
					<button @onclick="OnClickUpscalingTwoTimesBtn" type="button" class=@SetUpscalingButtonsState("btn btn-? flex-fill", Upscaling.TwoTimes) disabled="@_isLoading">2x</button>
					<button @onclick="OnClickUpscalingFourTimesBtn" type="button" class=@SetUpscalingButtonsState("btn btn-? flex-fill", Upscaling.FourTimes) disabled="@_isLoading">4x</button>
				</div>
			</div>

			<!--OUTPUT FORMAT BLOCK-->
			<div class="alert alert-dark" role="alert">
				<!--BLOCK TITLE-->
				<h5 class="mb-4">
					Output format
					<InfoTooltip Message="Decide whether to save the output image with the same format or choose your own." />
				</h5>

				<!--BUTTONS-->
				<div class="btn-group btn-group-sm d-flex" role="group" aria-label="Basic example">
					<button @onclick="OnClickFormatOriginalBtn" type="button" class=@SetFormatButtonsState("btn btn-? flex-fill", Format.Original) disabled="@_isLoading">Original</button>
					<button @onclick="OnClickFormatJpegBtn" type="button" class="@SetFormatButtonsState("btn btn-? flex-fill", Format.Jpeg)" disabled="@_isLoading">JPEG</button>
					<button @onclick="OnClickFormatPngBtn" type="button" class="@SetFormatButtonsState("btn btn-? flex-fill", Format.Png)" disabled="@_isLoading">PNG</button>
				</div>
			</div>

			<!--OUTPUT FOLDER LINK-->
			<div class="alert alert-light text-center" role="alert">
				Your images will be saved in 
				<code>
					<SpanTooltip Message="Open in Windows Explorer">
						<a @onclick="OnClickOpenOutputFolderAsync" class="icon-link icon-link-hover" href="#">
	                        'MyPictures/Widerpaper'
	                        <i class="bi bi-box-arrow-up-right" style="font-size: 1rem; position: relative; top: -4px;"></i>
	                    </a>
					</SpanTooltip>
				</code>
			</div>

			<!--START PROCESSING BUTTON-->
			<div class="d-grid mb-4">
				<button @onclick="OnClickStartProcessingAsync" type="button" class="btn btn-primary" disabled="@(_loadedMetadataImages.Count <= 0 || _isLoading)">
					@if (_isLoading && _loadedMetadataImages.Count > 0)
					{
						<span role="status">Conversion started</span>
						<span class="ms-2 spinner-border spinner-border-sm" aria-hidden="true"></span>
					}
					else
					{
						<span>Convert to Ultrawide!</span>
					}
				</button>
			</div>
		</div>

		<div class="col">

            <!--LOAD IMAGE AREA-->
            <div class="row" style="min-height: 40vh;">
                <div class="col">
                    <div id="display-drop-area" class="alert alert-light mb-4" style="position: relative">
                        <InputFile OnChange="@OnChangeLoadImagesAsync" multiple accept=".jpg, .jpeg, .png" class="drop-area" style="z-index: 1;" title=" " disabled="@_isLoading"></InputFile>

						<div class="text-center" style="z-index: 0; position: absolute">
							<i class="bi bi-images text-secondary" style="font-size: 7.5rem; opacity: 20%"></i>

							<p class="mb-1"><span class="text-primary fw-bold">Click to browse</span> or drag your images here</p>
							<p><small>Supports: JPEG and PNG up to @(_MAX_FILE_SIZE / (1024 * 1024)) MB</small></p>
							<p><small>Maximum of @_MAX_ALLOWED_FILES files</small></p>
						</div>
					</div>
				</div>
			</div>

            <!--LOADED IMAGES TABLE-->
            <div class="row">
                <div class="col table-responsive" style="max-height: 300px;">
                    <table class="table table-hover table-sm">
                        <thead style="position: sticky; top: 0">
                        <tr>
                            <th scope="col" style="width: 5%"></th>
                            <th scope="col" style="width: 25%">File</th>
                            <th scope="col" style="width: 30%">Original data</th>
                            <th scope="col" style="width: 30%">Output data</th>
                            <th scope="col" style="width: 10%">Status</th>
                        </tr>
                        </thead>
                        <tbody>
	                        @foreach (WiderpaperMetadata image in _loadedMetadataImages)
	                        {
		                        <TableRow Image="image" UpscalingChosen="_upscalingChosen" 
		                                  OnClickDeleteRowBtnCallback="OnClickDeleteRowBtn" 
		                                  OnClickViewProcessedImageBtnCallback="OnClickViewProcessedImageBtnAsync"
		                                  OnClickOpenOutputFolderBtnCallback="OnClickOpenOutputFolderAsync" />
		                        // NOTE: instead of TableRow having all the buttons and texts, I could use
		                        // RenderFragment ChildComponent and use a for loop with index, to generate
		                        // the content here on Index page --would not need EventsCallback
	                        }
                        </tbody>
                    </table>
                    @if (_loadedMetadataImages.Count <= 0)
                    {
	                    if (_isLoading)
	                    {
							<div class="text-center mt-5">
								<div class="spinner-grow text-primary" role="status">
									<span class="visually-hidden">Loading...</span>
								</div>
							</div>
		                    
		                    <p class="text-center mt-3">Your images are being loaded...</p>
	                    }
	                    else
	                    {
		                    <p class="text-center mt-5">Your loaded images will appear here.</p>
	                    }
                    }
                </div>
            </div>
        </div>
    </div>

	<!--TOASTERS-->
	<div class="toast-container position-fixed top-0 end-0 p-3">

		<!--ERROR: FILE TOO LARGE-->
		<Toast @ref="_toastFileTooLarge" Title="File is too large" ToastValidation="Toast.Validation.Error">
			<Body>
				<p>One or more files exceed the maximum allowed size.</p>
				Please, select images up to @(_MAX_FILE_SIZE / (1024 * 1024)) MB.
			</Body>
		</Toast>

		<!--ERROR: TOO MANY FILES-->
		<Toast @ref="_toastTooManyFiles" Title="Too many files selected" ToastValidation="Toast.Validation.Error">
			<Body>
				<p>Widerpaper can process up to @_MAX_ALLOWED_FILES files on a single batch.</p>
				Please, select fewer files and try again.
			</Body>
		</Toast>
	</div>
</div>

